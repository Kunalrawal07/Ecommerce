            <div class="details">
                <h2  id="pname">{{product.name}}</h2>
                <h3 class="product-price">₹ {{product.price}}</h3>
                <button class="button add-to-cart">Add to Cart</button>
{{!-- <button class="button buy-now"   onclick="window.location.href='/buy/{{product._id}}'">Buy Now</button> --}}
<button class="button buy-now"   onclick="handleBuyNow()">Buy Now</button>
                <h2>Description</h2>
                <div class="product-description">
                    <ul>
                        {{#each (splitDescription product.description)}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>                
                </div>
            </div>
        </div>

    <script src="../public/navbar.js"> </script>
 <script>
     window.username = "{{username}}"; // Username from the session (null if not logged in)
    window.productId = "{{product._id}}"; 

    function handleBuyNow() {
        if (window.username && window.username !== "") {
            // If the user is logged in, redirect to the buy page
            window.location.href = `/buy/${window.productId}`; // Make sure productId is correct
        } else {
            // If the user is not logged in, redirect to the login page
            window.location.href = '/login';
        }
    }
</script>



     <!-- More Products Section -->
<div class="more-products" id="product-container">
    <h2 class="more-products-title"> More Suggested Products</h2>
    <div class="more-products-container">
        {{#each products}}
        <div class="more-product-card">
            <img src="{{this.imageUrls.[0]}}" alt="{{this.name}}" class="more-product-image">
            <h3 class="product-title">{{this.name}}</h3>
            <p class="product-price">₹ {{this.price}}</p>
            <div>
                {{!-- <button id="view" class="add-to-cart" onclick="addToCart('{{this._id}}')">Add to Cart</button> --}}
                <a href="/product/{{this._id}}" class="view-more-btn">View More</a>
                <button id="cart" onclick="addToCart('{{this._id}}', '{{this.name}}', {{this.price}}, '{{this.imageUrls.[0]}}')">Add to Cart</button>

            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    function addToCart(productId) {
        fetch('/add-to-cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId }),
        })
        .then((response) => response.json())
        .then((data) => {
            if (data.success) {
                alert('Product added to cart!');
            } else {
                alert('Failed to add product to cart.');
            }
        })
        .catch((error) => {
            console.error('Error:', error);
        });
    }
</script>


