  visibility: hidden; /* Initially hidden */
  opacity: 0; /* Initially invisible */
  transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
}

/* Show the modal */
.modal.show {
  visibility: visible;
  opacity: 1;
}

/* Modal Content */
