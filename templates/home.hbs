        function autoSlide() {
            // Increment index
            currentIndex++;

            // Loop back to the first slide after the last slide
            if (currentIndex > totalSlides) {
                currentIndex = 1;
            }

            // Set the corresponding radio input to checked
            document.getElementById(`frame${currentIndex}`).checked = true;
        }

        // Start auto sliding
        setInterval(autoSlide, intervalTime);
    </script>


